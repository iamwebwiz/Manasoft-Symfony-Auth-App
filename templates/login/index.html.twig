{% extends 'base.html.twig' %}

{% block title %}LOGIN{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {% if app.user %}
                        <div class="mb-3">
                            <a href="{{ path('logout') }}" class="btn btn-danger">Logout</a>
                        </div>
                    {% else %}
                        <h2 class="text center">
                            LOGIN
                            <a href="{{ path('homepage') }}" class="btn btn-info float-right">Home</a>
                            <div class="clearfix"></div>
                        </h2>
                        <hr>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey }}</div>
                        {% endif %}
                        <form action="" method="POST">
                            <div class="form-group">
                                <label for="username">Email</label>
                                <input type="email" class="form-control" id="username" name="_username" value="{{ lastUsername }}">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="_password" id="password" class="form-control">
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                        <hr>
                        Don't have an account? <a href="{{ path('register') }}">Click here to register</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
